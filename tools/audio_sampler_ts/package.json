{
  "name": "audio-sampler-ts",
  "version": "0.1.0",
  "description": "A TypeScript tool for sampling audio from a serial port and saving it as WAV.",
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "build": "tsc -p .",
    "start": "node dist/audio_sampler.js",
    "dev": "ts-node src/audio_sampler.ts",
    "list": "ts-node src/audio_sampler.ts --list"
  },
  "dependencies": {
    "@serialport/parser-readline": "^13.0.0",
    "serialport": "^13.0.0",
    "wav": "^1.0.2"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/wav": "^1.0.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
